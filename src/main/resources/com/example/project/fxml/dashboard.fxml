<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.controller.DashboardController">
    <top>
        <HBox spacing="10.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>
            <children>
                <Button fx:id="btnAddTask" text="Tambah Tugas" onAction="#onAddTask" />
                <Button fx:id="btnShowAll" text="Daftar Tugas" onAction="#onShowAll" />
                <Button fx:id="btnShowPending" text="Belum Selesai" onAction="#onShowPending" />
                <Button fx:id="btnShowCompleted" text="Selesai" onAction="#onShowCompleted" />
            </children>
        </HBox>
    </top>
    <center>
        <TreeTableView fx:id="taskTreeTable" prefWidth="800.0">
            <columns>
                <TreeTableColumn fx:id="colName" text="Nama" prefWidth="150.0"/>
                <TreeTableColumn fx:id="colCourse" text="Mata Kuliah" prefWidth="150.0"/>
                <TreeTableColumn fx:id="colDate" text="Tanggal" prefWidth="100.0"/>
                <TreeTableColumn fx:id="colTime" text="Waktu" prefWidth="80.0"/>
                <TreeTableColumn fx:id="colPriority" text="Prioritas" prefWidth="100.0"/>
                <TreeTableColumn fx:id="colProgress" text="Progress (%)" prefWidth="100.0"/>
                <TreeTableColumn fx:id="colStatus" text="Status" prefWidth="100.0"/>
                <TreeTableColumn fx:id="colAction" text="Aksi" prefWidth="180.0"/>
            </columns>
        </TreeTableView>
    </center>
</BorderPane>