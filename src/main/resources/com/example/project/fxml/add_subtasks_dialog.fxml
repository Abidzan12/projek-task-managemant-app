<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.controller.AddSubtasksController" styleClass="add-task-pane" prefWidth="500.0">
    <children>
        <VBox spacing="10.0" alignment="TOP_LEFT" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0" styleClass="add-task-main-vbox">
            <padding>
                <Insets top="20.0" right="25.0" bottom="20.0" left="25.0" />
            </padding>
            <children>
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <FontIcon iconLiteral="fas-plus-circle" iconSize="20" styleClass="title-icon"/>
                        <Label text="Tambah Sub-Tugas" styleClass="main-title-text" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </HBox>

                <Label fx:id="parentTaskTitleLabel" styleClass="parent-info-label" text="untuk: [Nama Tugas Induk]"/>

                <Label text="Daftar Sub-tugas:" styleClass="form-label-above">
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Label>

                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: #CED4DA; -fx-border-radius: 8px;">
                    <content>
                        <VBox fx:id="subtasksContainer" spacing="8.0" style="-fx-background-color: #F8F9FA; -fx-padding: 10px;"/>
                    </content>
                </ScrollPane>

                <Button fx:id="addMoreButton" onAction="#handleAddMore" text="Tambah Sub-Tugas Lain" styleClass="form-button-secondary">
                    <graphic>
                        <FontIcon iconLiteral="fas-plus" iconSize="12"/>
                    </graphic>
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Button>

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                    <children>
                        <Button fx:id="cancelButton" onAction="#handleCancel" styleClass="cancel-button-form" text="Batal"/>
                        <Button fx:id="saveAllButton" onAction="#handleSaveAll" styleClass="save-button" text="Simpan Semua"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
